<Window x:Class="AdminOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bork Overlay"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20">
        <TextBlock Text="Indítópanel" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>

        <Button x:Name="BtnStart" Content="Overlay Indítása" Click="BtnStart_Click" Height="40" Margin="0,10,0,10"/>
        <Button x:Name="BtnStop" Content="Overlay Bezárása" Click="BtnStop_Click" Height="40" IsEnabled="False" Margin="0,0,0,10"/>

    </StackPanel>
</Window>